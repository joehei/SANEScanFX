<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.heimbuchner.sanescanfx.main.SANEScanFX">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
          <Button mnemonicParsing="false">
               <graphic>
                  <FontIcon iconLiteral="mdmz-scanner" iconSize="22" />
               </graphic>
               <tooltip>
                  <Tooltip text="Scan" />
               </tooltip>
            </Button>
            <Button fx:id="previewScan" mnemonicParsing="false">
               <graphic>
                  <FontIcon iconLiteral="mdal-image_search" iconSize="22" />
               </graphic>
               <tooltip>
                  <Tooltip text="Preview scan" />
               </tooltip>
            </Button>
        </items>
      </ToolBar>
      <SplitPane dividerPositions="0.5, 0.5" VBox.vgrow="ALWAYS">
         <items>
            <ListView prefHeight="200.0" prefWidth="200.0" />
            <ImageView fx:id="imageview" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TitledPane prefHeight="200.0" prefWidth="200.0" text="Scan options" />
                  <TitledPane prefHeight="200.0" prefWidth="200.0" text="Preview options" />
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</VBox>
